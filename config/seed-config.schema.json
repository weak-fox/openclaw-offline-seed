{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "openclaw-offline-seed config",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "plugins": {
      "type": "array",
      "default": [],
      "items": {
        "oneOf": [
          {
            "type": "string",
            "minLength": 1
          },
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "spec": {
                "type": "string",
                "minLength": 1
              },
              "enabled": {
                "type": "boolean",
                "default": true
              }
            },
            "required": ["spec"]
          }
        ]
      }
    },
    "skills": {
      "type": "array",
      "default": [],
      "items": {
        "oneOf": [
          {
            "type": "string",
            "minLength": 1
          },
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "slug": {
                "type": "string",
                "minLength": 1
              },
              "enabled": {
                "type": "boolean",
                "default": true
              }
            },
            "required": ["slug"]
          }
        ]
      }
    }
  }
}
